<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<div class="container mt-3 col-md-6">
    <%=message%>
    <form action="/resetpassword" method="post">
        <div class="input-group mb-3">
            <input type="email" name="username" id="" value="<%= username%>" required readonly class="form-control">
        </div>
        <div class="input-group mb-3">
            <input type="password" name="password1" placeholder="New Password" class="form-control" id="password1" ><i class="bi bi-eye-slash input-group-text" id="togglePassword"></i>
        </div>
        <div class="input-group mb-3">
            <input type="password" name="password2" placeholder="Confirm New Password" class="form-control" id="password2">
        </div>
        <input type="submit" value="Reset Password" class="btn btn-primary mt-3">
    </form>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="../static/js/resetPassword.js"></script>