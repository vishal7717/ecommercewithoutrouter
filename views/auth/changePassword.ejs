<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<div class="container mt-3 col-md-6">
     <p class="mb-3 text-center"> <%=message%></p>
    <form action="/changepassword" method="post">
        <div class="input-group mb-3">
            <input type="password" name="password1" placeholder="New Password" class="form-control" id="password1" ><i class="bi bi-eye-slash input-group-text" id="togglePassword"></i>
        </div>
        <div class="input-group mb-3">
            <input type="password" name="password2" placeholder="Confirm New Password" class="form-control" id="password2">
        </div>
        <input type="submit" value="Update Password" class="btn btn-success mt-3">
        <a href="/" class="btn btn-secondary mt-3">Home</a>
    </form>
</div>
