<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<div class="container col-md-6">
    <p class="text-center text-danger mt-2"><%=message%></p>
    <form action="/signup" method="post">
        <input type="text" name="name" id="name" placeholder="Your Sweet Name*" required class="form-control mb-3">
        <input type="email" name="username" id="username" placeholder="Your Email*" required class="form-control mb-3">
        <input type="password" name="password" id="password" placeholder="Password*" required class="form-control mb-3">
        <!-- <input type="file" name="profileimage" id=""> -->
        <div>
            <p class="fs-6">Already Have An Account? <a href="/login">Login Now!</a></p>
        </div>
        <div >
            <input type="submit" value="Signup" class="btn btn-primary">
        </div>
    </form>
</div>