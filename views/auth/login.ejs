<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="/static/css/style.css">

<div class="container col-md-6 ">
    <p class="mt-2 text-center"><%= message %></p>
    <form action="/login" method="post">
        <input type="email" name="username" id="username" placeholder="Email*" class="form-control mb-3" required>
        <input type="password" name="password" id="password" placeholder="Password*" class="form-control mb-3" required>
        <div >
            <input type="submit" value="Login" class="btn btn-primary">
        </div>
    </form>
    <div>
        <p class="small">Don't Have Account? <a href="/signup">Create An Account</a></p>
        <p class="small">Forgot Password ? <a href="/forgot">Reset Password</a></p>
    </div>

</div>